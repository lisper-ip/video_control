<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/con_retry"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ProgressBar
        android:indeterminateDrawable="@drawable/ic_blue_loading"
        android:indeterminate="false"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/iv_anim"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"/>

    <TextView
        app:layout_constraintRight_toRightOf="@id/iv_anim"
        app:layout_constraintLeft_toLeftOf="@id/iv_anim"
        app:layout_constraintTop_toBottomOf="@id/iv_anim"
        android:textColor="@color/state_text"
        android:textSize="@dimen/text_12sp"
        android:text="@string/default_loading"
        android:layout_marginTop="@dimen/dp_20"
        tools:text="@string/app_name"
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>