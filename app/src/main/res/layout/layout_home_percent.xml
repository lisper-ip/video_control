<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_margin="@dimen/dp_1"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/iv_out"
        android:src="@mipmap/ic_little_circle2"
        android:layout_width="match_parent"
        app:layout_constraintDimensionRatio="h, 1:1"
        android:layout_height="0dp"/>

    <app.lonzh.videocontrol.widget.CircleProgressView
        android:id="@+id/iv_progress"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/dp_4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        app:layout_constraintDimensionRatio="h, 1:1"
        android:layout_height="0dp"/>

    <ImageView
        android:layout_margin="@dimen/dp_14"
        android:src="@mipmap/ic_little_circle1"
        app:layout_constraintDimensionRatio="h, 1:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/iv_in"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <TextView
        android:autoSizeTextType="uniform"
        android:autoSizePresetSizes="@array/auto_text_size"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/white"
        android:maxLines="1"
        android:text="0%"
        android:id="@+id/tv_percent"
        android:textSize="@dimen/text_34sp"
        android:layout_margin="@dimen/dp_20"
        app:layout_constraintDimensionRatio="h, 1:1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>